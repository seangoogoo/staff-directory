# Database Configuration
# DB_HOST: Database server hostname (usually localhost)
# DB_USER: Database username
# DB_PASS: Database password
# DB_NAME: Database name (can be changed to use an existing database)
# DB_TABLE_PREFIX: Optional prefix for all tables (e.g., sd_)
# DB_CREATE_DATABASE: Set to false if the database already exists
# DB_INSTALLED: Set to true when the database has been initialized
DB_HOST=localhost
DB_USER=root
DB_PASS=your_database_password
DB_NAME=staff_dir
DB_TABLE_PREFIX=sd_
DB_CREATE_DATABASE=true
DB_INSTALLED=false

# Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin
USE_SECURE_COOKIES=true

# Session and Cookie Configuration
# Session lifetime in seconds (24 hours)
SESSION_LIFETIME=86400
# Session activity check interval (1 hour)
SESSION_UPDATE_INTERVAL=3600
# Path for cookies (site-wide)
COOKIE_PATH=/
# Cookie lifetime in seconds (30 days)
COOKIE_LIFETIME=2592000

# Application Settings
# Set to true to force CSS updates on each page reload
DEV_MODE=true

# Default title settings
# Set the default title for the frontend and admin areas here then go to reset title settings in settings.php to apply
DEFAULT_FRONTEND_TITLE="My company"
DEFAULT_ADMIN_TITLE="Staff Directory Admin"
